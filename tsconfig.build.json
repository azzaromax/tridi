{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/js",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "module": "none",
    "noImplicitAny": true,
    "outFile": "./dist/js/tridi.min.js",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": ["es2016", "dom", "es5"]
  },
  "include": [
    "./src/**/*"
  ]
}
